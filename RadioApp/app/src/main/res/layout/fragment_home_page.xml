<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.basitple.radioapp.HomePage">

    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stary_background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/PROFILE_BUTTON"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="167dp"
        android:layout_height="153dp"
        android:layout_marginBottom="32dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="57dp"
        android:alpha="0.60"
        android:background="@drawable/round_button"
        android:elevation="1dp"
        android:text="Profile"
        app:layout_constraintBottom_toTopOf="@+id/LOG_OUT_BUTTON"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/NEWS_BUTTON"
        android:layout_width="157dp"
        android:layout_height="117dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="72dp"
        android:alpha="0.60"
        android:background="@drawable/round_button"
        android:text="News"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/MUSIC_BUTTON"
        android:layout_width="166dp"
        android:layout_height="0dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="144dp"
        android:alpha="0.60"
        android:background="@drawable/round_button"
        android:text="music"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/NEWS_BUTTON"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/LOG_OUT_BUTTON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="34dp"
        android:layout_marginTop="8dp"
        android:text="Log out"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/MUSIC_BUTTON"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/ALARM_BUTTON"
        android:layout_width="172dp"
        android:layout_height="118dp"
        android:layout_marginBottom="48dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:alpha="0.60"
        android:background="@drawable/round_button"
        android:text="Alarm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MUSIC_BUTTON"
        app:layout_constraintVertical_bias="0.051"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1" />
</android.support.constraint.ConstraintLayout>

</FrameLayout>
